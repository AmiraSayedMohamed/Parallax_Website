{
    "manifest_version": 3,
    "name": "Customizable Desktop Wallpaper",
    "version": "1.0",
    "description": "A browser extension to select and apply desktop wallpapers.",
    "permissions": ["storage", "activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}

